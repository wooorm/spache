{
  "name": "spache",
  "version": "1.0.0",
  "description": "List of simple American-English words: The Revised Spache (1974)",
  "license": "MIT",
  "keywords": [
    "spache",
    "word",
    "list"
  ],
  "files": [
    "index.js",
    "index.json"
  ],
  "repository": "https://github.com/wooorm/spache",
  "bugs": "https://github.com/wooorm/spache/issues",
  "author": "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (http://wooorm.com)"
  ],
  "dependencies": {},
  "devDependencies": {
    "browserify": "^13.0.1",
    "esmangle": "^1.0.1",
    "nyc": "^7.0.0",
    "remark-cli": "^1.0.0",
    "remark-comment-config": "^4.0.0",
    "remark-github": "^5.0.0",
    "remark-lint": "^5.0.0",
    "remark-validate-links": "^4.0.0",
    "scraperjs": "^1.2.0",
    "tape": "^4.0.0",
    "xo": "^0.16.0"
  },
  "scripts": {
    "build-md": "remark . --quiet --frail",
    "build-generate": "node script/generate.js",
    "build-bundle": "browserify index.js --bare -s spache > spache.js",
    "build-mangle": "esmangle spache.js > spache.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "ignores": [
      "spache.js",
      "spache.min.js"
    ]
  },
  "remarkConfig": {
    "output": true,
    "plugins": {
      "comment-config": null,
      "github": null,
      "lint": {
        "list-item-spacing": false
      },
      "validate-links": null
    },
    "settings": {
      "bullet": "*"
    }
  }
}
